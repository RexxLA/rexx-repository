      if c = 0 then do
         Letter.Lprt = Overlay(Line,Letter.Lprt,1)
         line = '' ;
         flag = 0  ; lprt = lprt + 1
      End
      Line = Line || Copies(flag,C)
      if Flag == ' ' ;then flag = '*' ;else flag = ' '
   End
 
   lef = 18 ; rig = 1
   Do j = 6 to 22
      p = POS('*',Letter.j)
      if p = 0 then ITERATE
      if p < lef then lef = p
      p = LASTPOS('*',Letter.j)
      if p > rig then rig = p
   End
   len = rig-lef+1
   if len < 1 then do ; len = 6 ; lef = 1  ; end
   Do j = 6 to 22
      Lines.j = lines.j Substr(Letter.j,lef,len)
   End
End
return
